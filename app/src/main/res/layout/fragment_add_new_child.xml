<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.schoolbus.fragments.parent.AddNewChildFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@drawable/ic_stu_photo"
                android:id="@+id/imageButtonStu"
                android:layout_height="100dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="25dp">


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtStudentName"
                    android:hint="Student Name"
                    android:layout_weight="1"
                    android:textSize="14sp" />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="25dp">
                <TextView
                    android:text="Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginRight="15dp"
                    android:paddingTop="8dp"
                    android:paddingLeft="5dp" />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/radioGroupGender"
                    android:orientation="horizontal">

                    <RadioButton
                        android:text="Male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonParent"
                        android:layout_weight="1"
                        android:checked="true"/>

                    <RadioButton
                        android:text="Female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonChild"
                        android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginLeft="5dp"
                        android:text="Grade"
                        android:layout_weight="0.04" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Class"/>
                </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:weightSum="1">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="180dp"
                        android:layout_height="match_parent"
                        android:background="#d0d0d0">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerGrade"
                            android:layout_marginLeft="6dp"
                            android:entries="@array/student_grade"
                            android:fadingEdge="horizontal|vertical"
                            android:foregroundGravity="top">

                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:background="#d0d0d0">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerClass"
                            android:entries="@array/student_class">

                        </Spinner>
                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="1">

                <TextView
                    android:text="Pickup Location :"
                    android:layout_height="41dp"
                    android:id="@+id/textView2"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.06"
                    android:layout_width="100dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtLocationPick"
                    android:layout_weight="0.85"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_place"
                    android:id="@+id/imageButtonStuPickLocation"
                    android:layout_weight="0.07" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="1">

                <TextView
                    android:text="Drop Location    :"
                    android:layout_width="100dp"
                    android:layout_height="41dp"
                    android:id="@+id/textView3"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.06" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/txtLocationDrop"
                    android:layout_weight="0.85"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_place"
                    android:id="@+id/imageButtonStuDropLocation"
                    android:layout_weight="0.07" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:weightSum="1">

                <TextView
                    android:text="Pickup Time      :"
                    android:layout_width="100dp"
                    android:layout_height="41dp"
                    android:id="@+id/textView4"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.06" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:id="@+id/txtPickuptime"
                    android:layout_weight="0.85"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_time"
                    android:id="@+id/imageButtonStuPickupTime"
                    android:layout_weight="0.07" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/spinnerScool"
                android:layout_marginTop="25dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="School"
                        android:layout_height="41dp"
                        android:id="@+id/textView5"
                        android:textSize="14sp"
                        android:paddingTop="10dp"
                        android:paddingLeft="5dp"
                        android:layout_width="114dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.06"
                        android:background="#d0d0d0">

                        <Spinner
                            android:layout_width="268dp"
                            android:layout_height="36dp"
                            android:id="@+id/spinnerStuSchool" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnSubmit"
                android:textColor="@android:color/background_light"
                android:background="#387EF5"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.schoolbus.fragments.driver.ViewStudentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stu_photo"
                android:id="@+id/currentStuImageView" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Name                          : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:layout_width="134dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuName"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="School                        : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31"
                    android:layout_width="134dp" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuSchool"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Gender                        : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:layout_width="134dp" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuGender"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Grade                          : "
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView41" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuGrade"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Class                           : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32"
                    android:layout_width="134dp" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuClass"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="Pickup Location        : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33"
                    android:layout_width="134dp" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuPick"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Drop Location            : "
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuDrop"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Monthly Fee               : Rs."
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuFee"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="PickupTime                : "
                    android:layout_height="wrap_content"
                    android:id="@+id/textView1"
                    android:layout_width="134dp" />

                <EditText
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtPerStuPickupTime"
                    android:textSize="15dp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:weightSum="1"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Parent Info "
                    android:layout_height="26dp"
                    android:id="@+id/textView2"
                    android:layout_weight="0.01"
                    android:paddingTop="10dp"
                    android:layout_width="134dp" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_parent"
                    android:id="@+id/btnParentInfo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:baselineAligned="false"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:text="Edit"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/btnPerStuEdit"
                    android:textColor="@android:color/background_light"
                    android:background="#387EF5"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    tools:ignore="ButtonStyle" />

                <Button
                    android:text="Save"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnPerStuSave"
                    android:textColor="@android:color/background_light"
                    android:background="#387EF5"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp" />

                <Button
                    android:text="Delete"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btnPerStuDelete"
                    android:textColor="@android:color/background_light"
                    android:background="#387EF5"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kusha.schoolbus.fragments.driver.TempStudentFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Name                   : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuName"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="School                 : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuSchool"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Grade                   : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuGrade"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Class                    : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuClass"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Type                     : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView17" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuType"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Pickup Location : "
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:layout_width="108dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuPickup"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Drop Location     : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuDrop"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Pickup Time       : "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuPickupTime"
                android:layout_weight="1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="Monthly Fee        :Rs.  "
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView18"
                android:layout_weight="0.11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTempStuMonthlyFee"
                android:layout_weight="0.74"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <Button
                android:text="Fee"
                android:layout_width="48dp"
                android:layout_height="33dp"
                android:id="@+id/btnMonthlyFee"
                android:textColor="@android:color/background_light"
                android:background="#387EF5"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.11" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <Button
                android:text="Accept"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/btnAccept"
                android:textColor="@android:color/background_light"
                android:background="#387EF5"
                android:layout_weight="0.23" />
            <Button
                android:text="Reject"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:id="@+id/btnReject"
                android:textColor="@android:color/background_light"
                android:background="#387EF5"
                android:layout_marginLeft="30dp"
                android:layout_weight="0.23" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>

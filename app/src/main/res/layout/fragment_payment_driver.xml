<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.schoolbus.fragments.driver.PaymentDriverFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="130dp">
        <Button
            android:id="@+id/btnAddPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#387EF5"
            android:text="Add"
            android:textColor="@android:color/background_light" />
        <Button
            android:id="@+id/btnViewPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#387EF5"
            android:text="View"
            android:textColor="@android:color/background_light" />
        <Button
            android:id="@+id/btnSummery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#387EF5"
            android:text="Summery"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/btnUpdte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#387EF5"
            android:text="Update"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="com.example.kusha.schoolbus.fragments.driver.RouteLocationFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Price Per Km: Rs. "
                android:textSize="15dp"
                android:gravity="right" />

            <TextView
                android:id="@+id/txtCurrentFee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:gravity="left"
                android:paddingLeft="5dp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_add_location"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_newPrice"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

                <EditText
                    android:id="@+id/txtNewFee"
                    android:layout_width="374dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="New Price Per Km"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <ImageButton
                android:id="@+id/button_fee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_add" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kusha.schoolbus.fragments.parent.AttendanceFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="126dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <TextView
                    android:text="Child Name : "
                    android:layout_height="41dp"
                    android:id="@+id/textView2"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCurrentChildName"
                    android:layout_weight="0.91"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Child Type   : "
                    android:layout_height="41dp"
                    android:id="@+id/textView21"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCurrentChildType"
                    android:layout_weight="0.91"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Date              : "
                    android:layout_height="41dp"
                    android:id="@+id/textView22"
                    android:textSize="14sp"
                    android:paddingTop="10dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/txtCurrentDate"
                    android:layout_weight="0.91"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:textSize="14sp"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Is The Child Coming Today"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Morning : "
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:id="@+id/textView8"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingLeft="10dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroupMorning"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonEveningYes"
                        android:checked="true"/>

                    <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonEveningNo"
                        android:layout_weight="0.15" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Evening  : "
                    android:layout_width="wrap_content"
                    android:layout_height="29dp"
                    android:id="@+id/textView6"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:paddingLeft="10dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroupEvening"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <RadioButton
                        android:text="Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonMorningYes"
                        android:checked="true"/>

                    <RadioButton
                        android:text="No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButtonMorningNo"
                        android:layout_weight="0.15" />
                </RadioGroup>
            </LinearLayout>


            <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:id="@+id/btnSubmit"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
